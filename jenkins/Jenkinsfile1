pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package install'
            }
        }
        stage('Deploy') {
            steps {
                sshPublisher publishers: [configName: 'ansible_server', transfers: [sourceFiles: '**/*.war', remoteDirectory: '//opt/playbooks']]
            }
        }        
    }
}
